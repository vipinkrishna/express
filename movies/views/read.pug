doctype html
html
    head
        title READ
        style table {border-collapse: collapse;width: 100%;} th, td {padding: 8px;text-align: left;border-bottom: 1px solid #ddd;} tr:hover{background-color:#f5f5f5}
    body
        h1 READ
        a(href="/movies/home") HOME
        hr
        p
            div
                table
                    tr
                        th ID
                        th MOVIE
                        th YEAR
                        th RATING
                    each doc in movies
                        tr
                            td= doc.id
                            td= doc.name
                            td= doc.year
                            td= doc.rating


