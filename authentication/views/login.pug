doctype html
html
    head
        title LOGIN
    body
        h1 LOGIN
        hr
        p
            if(message)
                h4(style="color:red") #{message}
            form(action="/login" method="POST")
                div
                    input(name="id" placeholder="USER ID")
                br
                div
                    input(name="password" type="password" placeholder="PASSWORD")
                br
                button(type="submit") LOGIN